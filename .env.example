# EduCore Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGO_URI=mongodb://localhost:27017/educore
# MongoDB connection string - replace with your database URL

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here
# Strong secret key for JWT token signing (minimum 32 characters recommended)

# Cloudinary Configuration (for media uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# PayPal Configuration (for payments)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET_ID=your-paypal-secret-id

# Email Configuration (for OTP and notifications)
Email_Service=gmail
# Email service provider (gmail, outlook, etc.)
Email=your-email@gmail.com
# Your email address for sending notifications
Email_Password=your-app-password
# App password or email password

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
# Google OAuth client ID for social login

# Frontend URL
CLIENT_URL=http://localhost:5173
# Frontend application URL (Vite dev server or production URL)

# Optional Configuration
PORT=5000
# Server port (defaults to 5000 if not specified)

REDIS_URL=redis://localhost:6379
# Redis connection URL for caching (optional)

# Development/Production Flag
NODE_ENV=development
# Set to 'production' in production environment